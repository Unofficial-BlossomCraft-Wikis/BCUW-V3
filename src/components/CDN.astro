---
// DO NOT EDIT THIS FILE
interface Props {
  path: string,
  name: string,
  ext: string,
  fileNameOverride?: string,
}

const { path, name, ext, fileNameOverride } = Astro.props;

const cleanedPath = path.replace(/^\/+|\/+$/g, '');

const cleanedName = name.split(/[^a-zA-Z0-9]/).map(word => word.charAt(0).toUpperCase() + word.slice(1).toLowerCase()).join('');

const url = `https://cdn.bcuw.xyz/${cleanedPath}/${fileNameOverride ? fileNameOverride : cleanedName}.${ext}`;
---
<img src={url} alt={name} />